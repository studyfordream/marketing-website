---
layout: wrapper
layout_script: false
layout_body_class:
- integrations-solutions
---
<div id="main">
  <div id="page-header">
    <div class="container">
      {{#if this.solutions }}
        <h1>{{global_solutions_data.page_heading}}</h1>
        {{#if global_solutions_data.sub_head}}<p>{{global_solutions_data.sub_head}}</p>{{/if}}
      {{else}}
        <h1>{{global_technology_data.page_heading}}</h1>
        {{#if global_techology_data.sub_head}}<p>{{global_techology_data.sub_head}}</p>{{/if}}
      {{/if}}
    </div><!--/.container-->
  </div><!--/#page-header-->
  <div id="page-header-gradient"></div>
  <div id="page-content">
    <div class="container ugc">
      <div class="columns twelve">
        <div class="row single-partner-container">
          <div class="columns four">
            <div class="partners-back">
              {{#if this.solutions }}
                <a href="{{linkPath}}/partners/solutions/">&lt; {{{global_solutions_data.see_all}}}</a>
              {{else}}
                <a href="{{linkPath}}/partners/technology/">&lt; {{{global_technology_data.see_all}}}</a>
              {{/if}}
            </div>

            <div class="partners-logo notranslate" style="background-image: url('{{this.logo}}');"></div>

            <div class="partners-link notranslate">
              <p><a href="{{website_link}}">{{website_display}}</a></p>
            </div>

            <div class="partners-contact">
              {{#each this.locations}}
                <div class="partners-location notranslate">
                  <p>
                    {{#if this.location.phone}}{{this.location.phone}} <br />{{/if}}
                    {{#if this.location.email}}<a href="mailto:{{this.location.email}}">{{this.location.email}}</a> <br />{{/if}}
                    <br />
                    {{#if this.location.address1}}{{this.location.address1}} <br />{{/if}}
                    {{#if this.location.address2}}{{this.location.address2}} <br />{{/if}}
                    {{#if this.location.city}}{{this.location.city}}, {{/if}}{{stateCountry this.location.state this.location.country }} {{this.location.zip}}<br />
                  </p>
                </div>
              {{/each}}
              {{#if this.contact}}
              <p>{{tr 'Questions'}}?
                <br>
                <a href="mailto:{{this.contact}}">
                  {{this.contact}}
                </a>
              </p>
              {{/if}}
            </div>

            {{#if this.languages}}
              <div class="partners-languages">
                <p>
                  <strong>{{{global_solutions_data.languages}}}</strong> <br />
                  {{#eachNoTrailing this.languages ", "}}{{.}}, {{/eachNoTrailing}}
                </p>
              </div>
            {{/if}}
          </div>
          <div class="columns eight">
            <h4 class="notranslate">{{title}}</h4>

            <div class="level">
              {{#if this.solutions }}
                {{#if stars}}
                  <div class="level-heading">{{{global_solutions_data.filter.stars}}}: <span data-tooltip title="{{{global_solutions_data.partner_tooltip}}}"></span></div>
                  <div class="star-cont {{#if stars}}star-cont--{{stars}}{{/if}} star-left"></div>
                {{/if}}
              {{/if}}
            </div>

            <div class="notranslate">
              {{#omarkdown path=linkPath}}{% body %}{{/omarkdown}}
            </div>

            {{#if this.tags}}
            <div class="partners-tags notranslate">
              <p>{{#eachNoTrailing this.tags ", </span>"}}<span>{{this}}, </span>{{/eachNoTrailing}}</p>
            </div>
            {{/if}}

            {{#isUrlLike this.kb_article}}
            <a class="button" href="{{../this.kb_article}}">
              {{{../global_solutions_data.kb_article}}}
            </a>
            {{/isUrlLike}}
          </div>
        </div>
      </div>
    </div><!--/.container-->
  </div><!--/#content-->
</div><!--/#main-->
