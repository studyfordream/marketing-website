---
layout: wrapper.hbs
layout_script: trial-form.js
layout_body_class: 
- trial-form-layout
---
<div id="main">
  <div class="header-wrapper">
    {{#if page.page_header}}
    <div id="page-header">
      <div class="container">
        {{#if page.visible_title}}<h1>{{page.visible_title}}</h1>{{/if}}
        {{#if page.sub_head}}<p>{{page.sub_head}}</p>{{/if}}
      </div><!--/.container-->
    </div><!--/#page-header-->
    {{/if}}
    <div class="container">
      <div class="row">
        <div class="columns six hero-left-cont">
          <img src="{{assetsDir}}/img/ppc/ppc.png">
          {{#if page.social_proof}}
          <div id="social-proof-cont">
              <div class="social-numbers visitors-tested-cont">
                <p class="social-number" id="visitors-tested-number">1,306,200,329</p>
                <p class="description">Visitors tested</p>
              </div>
              <div class="social-numbers experiments-run-cont">
                <p class="social-number" id="experiments-run-number">100,329</p>
                <p class="description">Experiments run</p>
              </div>
          </div>
          {{/if}}
        </div>
        <div class="columns six ppc-form-cont">
          <div id="ppc-form" class="landing-page-form">
            {{#if page.form_header}}
            <h4 class="seo-form-heading">{{page.form_header}}</h4>
            {{/if}}
            <p>{{{page.form_text}}}</p>
            <form id="seo-form" class="seo-form inline-labels" action="/account/free_trial_landing" autocomplete="off" novalidate="novalidate">
              <p class="error-message error error-show"></p>
              <input id="utm_medium" type="hidden" name="utm_medium" value="direct">
              <ul>
                <li class="url-input-related">
                  <label for="url">Type in a URL to try it out</label>
                  <input id="url" required name="url-input" type="url">
                </li>
                <li class="name-related">
                  <label for="name">Your Name</label>
                  <input id="name" required data-validation="name" name="name" type="text">
                </li>
                <li id="phone-email-cont">
                  <div class="label half left email-related">
                    <label for="email">Email - no spam</label>
                    <input id="email" required name="email" type="email">
                  </div>

                  <div class="label half right phone_number-related">
                    <label for="phone">Phone Number</label>
                    <input id="phone" required name="phone_number" type="tel">
                  </div>
                </li>
                <li class="terms">
                <small>By clicking the <q>Test it Out</q> button below I agree to the <br><a href="{{linkPath}}/terms" target="_blank">Terms of Service</a> and <a href="{{linkpath}}/privacy" target="_blank">Privacy Policy</a>.</small>
                </li>
                <li class="a-center">
                  <input type="submit" id="submit" class="button" value="Test it Out">
                  <p class=" processing-hide">Processing...</p>
                </li>
              </ul>
            </form>
          </div><!--/#ppc-form-->
        </div>
      </div><!--/.row-->
    </div>
  </div><!--/.header-wrapper-->
  {{> body }}
  <div class="seo-customers container">
    <div class="row">
      <div class="columns four">
        <h4>Happy Customers <br>testing with Optimizely</h4>
      </div>
      <div class="columns eight SL_swap" id="seo-customer-images">
        <img src="{{assetsDir}}/img/resources/free-trial-logos-bw.png" alt="Happy customer logos" />
      </div>
    </div>
  </div>
</div><!--/#main-->
